<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">@color/tab_strip_bg_normal</item>
        <item name="floatingSearch_viewTextColor">@color/tab_strip_text_normal</item>
        <item name="floatingSearch_hintTextColor">@color/tab_strip_text_normal</item>
        <item name="floatingSearch_dividerColor">@color/tab_strip_divider_color</item>
        <item name="floatingSearch_clearBtnColor">@color/md_red_900</item>
        <item name="floatingSearch_leftActionColor">@color/colorPrimaryDark</item>
        <item name="floatingSearch_menuItemIconColor">@color/md_blue_500</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/colorAccent</item>
        <item name="floatingSearch_actionMenuOverflowColor">@color/md_black_1000</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
